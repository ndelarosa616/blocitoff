<% if item.persisted? %>
  <%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
    <div class="col-md-6">
      <tr>
        <td><%= item.name %></td>
        <td><%= item.days_left %> days left</td>
        <td><%= link_to "", [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok' %></td>
      </tr>
    </div>
  <% end %>
<% end %>

